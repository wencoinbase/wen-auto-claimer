# Base RPC URL (Alchemy / QuickNode / etc.)
RPC_URL=https://base-mainnet.g.alchemy.com/v2/YOUR_API_KEY ( you can use any rpc url , public or your personal )

# Bot wallet private key (gas-only hot wallet)
PRIVATE_KEY=0xYOUR_PRIVATE_KEY

# Target contract address (vesting/airdrop contract)
CONTRACT_ADDRESS=0xCONTRACT_ADDRESS

# Method to call (one of: claim, release, withdraw)
METHOD=claim

# Interval in minutes
INTERVAL_MINUTES=5

# Optional: minimum claimable amount (in wei units)
MIN_CLAIMABLE_WEI=0
